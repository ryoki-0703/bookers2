
<h2>User info</h2>
 <%= attachment_image_tag user, :profile_image, :fill, size: "100x100", format: "jpeg", fallback: "no_image.jpeg" %>
<table class="table">
  <tbody>
    <tr></tr>
      <tr>
        <th>name</th>
        <th class="profile-name"><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
  </tbody>
</table>
<div class="row">
  <p><%= link_to "プロフィール編集", edit_user_path(user), class: "bth bth-outline-secondary bth-block" %></p>
</div>

