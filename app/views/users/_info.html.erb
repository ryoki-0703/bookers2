
<h2>User info</h2>
 <%= attachment_image_tag user, :profile_image, :fill, size: "100x100", format: "jpeg", fallback: "no_image.jpeg" %>
<table class="table">
  <tbody>
    <tr></tr>
      <tr>
        <th>name</th>
        <th class="profile-name"><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
      <tr>
        <th>follows</th>
        <th>
          <%=link_to follows_user_path(@user.id) do %>
            <%= @user.followings.count %>
          <% end %>
        </th>
      </tr>
      <tr>
        <th>followers</th>
        <th>
          <%=link_to followers_user_path(@user.id) do %>
            <%= @user.followers.count %>
          <% end %>
        </th>
      </tr>
  </tbody>
</table>
<div class="row">
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>

